<h1>List of all movies</hi>
<table border="1">
  <tr>
    <td>ID</td>
    <td>
      Image
    </td>
    <td>Title </td> 
    <td>Year</td>
    <td>Director</td>
    <td></td>
  </tr>
<% @list_of_movies.each do |a_thing| %>
  <tr>
    <td><%= a_thing.id %></td>
    <td>
      <img src = "https://robohash.org/<%= a_thing.title %>">
    </td>
    <td><%= a_thing.title %> </td> 
    <td><%= a_thing.year %> </td>
    <td><%d = Director.where({ :id => a_thing.director_id}).at(0)%>
        <%= d.name %> </td>
    <td>
      <a href="/movies/<%= a_thing.id %>">
      Show details
      </a>
    </td>
  </tr>
<% end %>
</table>
