<h1>
Actor #<%= @the_actor.id %> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_actor/<%= @the_actor.id %>" class="btn btn-block btn-outline-secondary">
  Delete actor
  <small>(Building this link is not required. It's an optional stretch goal; but, you have the tools if you want to give it a try.)</small>
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="http://robohash.org/<%= @the_actor.image %>?set=set100">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.created_at) %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.updated_at) %>
  </dd>
</dl>

<h2>
  Filmography
</h2>

<table border="1">
<tr>
    <td>
      Title
    </td>
    <td>
      Year    
    </td>
    <td>
      Director
    </td>
    <td>
      Character Name
    </td>
    <td>
    </td>
  </tr>

  <% @characters.each do |a_character| %>
  <tr>
    <% m = Movie.where({ :id => @characters.at(0).movie_id}).at(0)%>
    <td>
      <%= m.title%>
    </td>
    <td>
      <%= m.year%>
    </td>
     <td>
      <% d = Director.where({ :id => m.director_id}).at(0)%>
      <%= d.name%>
    </td>
    <td>
      <%= a_character.name%>
    </td>
    <td>
      <a href="/movie/<%= m.id %>">
        Show details
      </a>
    </td>
  </tr>
<% end %>
</table>
